<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/busName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/busId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus ID: "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/busDepartureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Time: "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/busArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrival Time: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/busTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerBusType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/seatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Seats:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of seats"
        android:inputType="number"/>

    <TextView
        android:id="@+id/idProofLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Proof:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinnerIdProof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/idNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Number:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextIdNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ID number"/>

    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Seating Arrangement"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:textColor="@android:color/white"/>

</LinearLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusBookingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryVariant">@color/lightPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightSecondary</item>
        <item name="colorOnSecondary">@color/lightOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="colorSurface">@color/lightSurface</item>
        <item name="colorError">@color/lightError</item>
        <item name="colorOnBackground">@color/lightOnBackground</item>
        <item name="colorOnSurface">@color/lightOnSurface</item>
        <item name="colorOnError">@color/lightOnError</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">?attr/colorOnBackground</item>
        <item name="android:editTextColor">?attr/colorOnBackground</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.BusBookingApp.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/premiumLightPrimary</item>
        <item name="colorPrimaryVariant">@color/premiumLightPrimaryVariant</item>
        <item name="colorSecondary">@color/premiumLightSecondary</item>
        <item name="android:colorBackground">@color/premiumLightBackground</item>
        <item name="colorSurface">@color/premiumLightSurface</item>
        <item name="colorOnPrimary">@color/premiumLightOnPrimary</item>
        <item name="colorOnSecondary">@color/premiumLightOnSecondary</item>
        <item name="colorOnBackground">@color/premiumLightOnBackground</item>
        <item name="colorOnSurface">@color/premiumLightOnSurface</item>
        <item name="android:textColor">@color/premiumLightOnBackground</item>
        <item name="android:editTextColor">@color/premiumLightOnBackground</item>
        <item name="android:textColorHint">@color/premiumLightSecondary</item>
        <item name="buttonStyle">@style/Widget.App.Button.Light</item>
    </style>

    <style name="Theme.BusBookingApp.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/premiumDarkPrimary</item>
        <item name="colorPrimaryVariant">@color/premiumDarkPrimaryVariant</item>
        <item name="colorSecondary">@color/premiumDarkSecondary</item>
        <item name="android:colorBackground">@color/premiumDarkBackground</item>
        <item name="colorSurface">@color/premiumDarkSurface</item>
        <item name="colorOnPrimary">@color/premiumDarkOnPrimary</item>
        <item name="colorOnSecondary">@color/premiumDarkOnSecondary</item>
        <item name="colorOnBackground">@color/premiumDarkOnBackground</item>
        <item name="colorOnSurface">@color/premiumDarkOnSurface</item>
        <item name="android:textColor">@color/premiumDarkOnBackground</item>
        <item name="android:editTextColor">@color/premiumDarkOnBackground</item>
        <item name="android:textColorHint">@color/premiumDarkSecondary</item>
        <item name="buttonStyle">@style/Widget.App.Button.Dark</item>
    </style>

    <!-- Button styles for each theme -->
    <style name="Widget.App.Button.Light" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/premiumLightPrimary</item>
        <item name="android:textColor">@color/premiumLightOnPrimary</item>
    </style>

    <style name="Widget.App.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/premiumDarkPrimary</item>
        <item name="android:textColor">@color/premiumDarkOnPrimary</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <!-- Define the Widget.App.Button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>

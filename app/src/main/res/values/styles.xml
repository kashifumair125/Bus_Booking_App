<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your app's color palette here -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Custom EditText style -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <!-- Custom Button style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Custom TextView style -->
    <style name="CustomTextViewStyle">
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>
